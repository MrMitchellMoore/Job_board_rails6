<%= simple_form_for(@job, html: { class: 'form-vertical' }) do |f| %>
<div class="form-group">
<%= f.association :category, prompt: 'Choose a category' %>
</div>
<div class="form-group">
  <%= f.input :title, class: 'form-control' %>
</div>
<div class="form-group">
  <%= f.input :company, class: 'form-control' %>
</div>
<div class="form-group">
  <%= f.input :url, class: 'form-control' %>
</div>
<div class="form-group">
  <%= f.input :description, as: :text, class: 'form-control' %>
</div>
<div class="actions">
  <%= f.button :submit,'Submit' ,class: 'btn btn-primary' %>
</div>
<% end %>